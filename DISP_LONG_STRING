CREATE OR REPLACE PROCEDURE DISP_LONG_STRING(LONG_STRING IN VARCHAR2) IS
  --递归方法现实长字符串，V_NUMBER_LINE ，每行展示长度
  V_NUMBER_LINE NUMBER;
BEGIN
  V_NUMBER_LINE :=200;


  IF LENGTH(LONG_STRING) > V_NUMBER_LINE THEN
    DBMS_OUTPUT.PUT_LINE(SUBSTR(LONG_STRING, 1, V_NUMBER_LINE));
    DISP_LONG_STRING(SUBSTR(LONG_STRING, V_NUMBER_LINE+1));
  ELSE
    DBMS_OUTPUT.PUT_LINE(LONG_STRING);
  END IF;
  EXCEPTION WHEN OTHERS
    THEN DBMS_OUTPUT.ENABLE(1000000);
  DISP_LONG_STRING(LONG_STRING);
END DISP_LONG_STRING;
